    <script>
   $(document).ready(function() {
    // Apply paroller to the first image for horizontal movement
    $('.paroller-image img').paroller({
        factor: 0.5,  // Horizontal speed for the first image
        type: 'foreground',
        direction: 'horizontal'  // Scroll horizontally as you scroll vertically
    });

    // Apply paroller to the second image with a slower scroll
    $('.paroller-image-second img').paroller({
        factor: 0.5,  // Horizontal speed for the second image
        type: 'foreground',
        direction: 'horizontal'  // Scroll horizontally for the second image
    });
});

// Initialize Fancybox
$(document).ready(function() {
    $("[data-fancybox='gallery']").fancybox({
        // Additional settings for Fancybox, such as navigation
        animationEffect: "fade",
        transitionEffect: "fade"
    });
});


        // Initialize AOS
AOS.init();

// Initialize Swiper
const swiper = new Swiper('.swiper-container', {
    loop: true,
    autoplay: {
        delay: 3000,
    },
    pagination: {
        el: '.swiper-pagination',
        clickable: true,
    },
});

// Form Validation with Toastr Notifications
document.getElementById('contactForm').addEventListener('submit', function (e) {
    e.preventDefault();
    
    const name = document.getElementById('name').value;
    const email = document.getElementById('email').value;
    const message = document.getElementById('message').value;
    
    if (!name || !email || !message) {
        toastr.error('All fields are required!');
    } else {
        toastr.success('Message sent successfully!');
        this.reset();
    }
});

    </script>
